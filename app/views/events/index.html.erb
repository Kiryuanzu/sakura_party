<div class="sakura-home">
  <div class="home-title">
    サクラ荘パーティ参加登録サイト（β版)
  </div>
  <div class="party-index">
    最新のパーティ情報
  </div>
  <% @events.each do |event| %>
  <div class="Party-info">
    <div class="Party-info-box">
      <p class="Party-info-time">日時: <%= event.started_date %></p>
      <p class="Party-info-name">パーティ名: <%= event.name %></p>
      <p class="Party-info-context">パーティの主な内容: <%= event.context %></p>
      <p class="Party-info-organaizer">オーガナイザー: <%= event.user.user_name %> さん</p>
    </div>
    <div class="party-attend">
      <button class="party-attend-button">
        <%= link_to "参加申し込み / パーティ詳細情報", event_path(event.id) %>
      </button>
    </div>
  </div>
  <% end %>
</div>