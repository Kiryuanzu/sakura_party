<%= @event.name %>
<%= @event.context %>
<% if @user_attend %>
  <% @attends.each do |attend| %>
    <p><%= attend.user.user_name %>さん</p>
  <% end %>
<% else %>
  <div class="attend-form">
    <%= form_for(@attend) do |f| %>
      <%= f.text_field :comment %>
      <%= f.hidden_field :event_id %>
      <%= f.submit "参加する" %>
    <% end %>
  </div>
<% end %>
