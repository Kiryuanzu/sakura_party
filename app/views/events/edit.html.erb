<%= form_with model: @event do |form| %>
  <div class="party-name-form">パーティ名: <%= form.text_area :name, required: true, placeholder: "100文字以内" %></div>
  <div class="party-context-form">パーティ内容: <%= form.text_area :context, required: true, placeholder: "2000字以内" %></div>
  <div class="party-place-form">集合場所 <%= form.text_area :place, required: true, placeholder: "240字以内" %></div>
  <div class="party-contact-form">連絡方法 <%= form.text_area :contact, required: true, placeholder: "240字以内" %></div>
  <p>パーティ開催日時: 
  <%= form.datetime_select :started_date %>
  </p>
  <div>定員人数
    <%= number_field_tag 'event[capacity]', in: 1...999 %>
  </div>
  <div>パーティのイメージ画像:
    <%= form.file_field :event_image %>
  </div>
  <p><%= form.submit %></p>
<% end %>